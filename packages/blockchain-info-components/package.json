{
  "name": "blockchain-info-components",
  "version": "0.0.1",
  "description": "A shared UI components library for blockchain.info applications.",
  "license": "ISC",
  "author": {
    "name": "Blockchain.info",
    "url": "https://blockchain.info"
  },
  "main": "lib/index.js",
  "module": "src/index.js",
  "scripts": {
    "coverage": "./../../node_modules/.bin/jest --coverage",
    "npm:publish": "rm -rf lib && babel --out-dir lib --ignore spec.js --copy-files src",
    "storybook:build": "build-storybook",
    "storybook:serve": "start-storybook -p 6006",
    "test": "./../../node_modules/.bin/jest",
    "test:debug": "node --inspect-brk ./../../node_modules/.bin/jest --runInBand",
    "test:watch": "./../../node_modules/.bin/jest --watchAll"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/index.js"
    ],
    "coverageDirectory": "<rootDir>/../../coverage/blockchain-info-components",
    "coverageReporters": [
      "json",
      "html"
    ],
    "moduleNameMapper": {
      "\\.(pdf|jpg|jpeg|png|gif|eot|otf|svg|ttf|woff|woff2)$": "<rootDir>/src/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/../../node_modules/identity-obj-proxy"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/lib"
    ],
    "setupFiles": [
      "<rootDir>/../../jest.shim.js",
      "<rootDir>/../../jest.config.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/../../node_modules/enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/lib"
    ],
    "transform": {
      "^.+\\.jsx$": "<rootDir>/../../node_modules/babel-jest",
      "^.+\\.js$": "<rootDir>/../../node_modules/babel-jest"
    }
  },
  "dependencies": {
    "polished": "^1.9.0",
    "ramda": "^0.25.0",
    "react-onclickoutside": "^6.7.1",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "styled-components": "^3.2.4"
  }
}
